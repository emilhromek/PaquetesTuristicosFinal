@{
    ViewData["Title"] = "Home Page";
}

<main>
<!-- Contenido  -->
<div class="container">
  <div class="row">
<h2>Administracion de Transportes</h2>
  </div>
  <div>

    <div>
      <div>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#cargarBusModal">
      Nuevo Bus
      </button>   
      <!-- Modal -->
      <div class="modal fade" id="cargarBusModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Nuevo Bus</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                      <form id="cargarBusForm">
                        <p>Ingrese número:</p>                 
                          <input type="text" name="numero" placeholder="Ingrese número" class="form-control my-3" required />
                          <p>Ingrese patente:</p>
                          <input type="text" name="patente" placeholder="Ingrese patente" class="form-control my-3" required />
                          <p>Ingrese capacidad:</p>
                          <input type="text" name="capacidad" placeholder="Ingrese capacidad" class="form-control my-3" required />
                          <p>Empresa:<p>
                            <select class="form-select" name="empresaId" id="selectEmpresaBus" aria-label="Default select example">
                                <option selected="true" disabled="disabled">Elija empresa</option>
                            </select>  
                          <p>Ingrese observación:</p>
                          <input type="text" name="observacion" placeholder="Ingrese observación" class="form-control my-3" required />
                          <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                              <button type="button" class="btn btn-primary" onclick="createBus()">Crear</button>
                          </div>
                      </form>
                      <div class="mt-3" id="cargarViajeRespuesta">
      
                      </div>
                  </div>
      
              </div>
          </div>
      </div>
      <!-- Modal editar -->
      <div class="modal fade" id="actualizarBusModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Actualizar bus</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="actualizarBusForm">
                      <p>Ingrese número:</p>                 
                        <input type="number" name="numero" placeholder="Ingrese número" class="form-control my-3 numero" required />
                        <p>Ingrese patente:</p>
                        <input type="text" name="patente" placeholder="Ingrese patente" class="form-control my-3 patente" required />
                        <p>Ingrese capacidad:</p>
                        <input type="number" name="capacidad" placeholder="Ingrese capacidad" class="form-control my-3 capacidad" required />
                        <p>Empresa:<p>
                          <select class="form-select empresaId" name="empresaId" aria-label="Default select example">
                              <option selected="true" disabled="disabled">Elija empresa</option>
                          </select>  
                        <p>Ingrese observación:</p>
                        <input type="text" name="observacion" placeholder="Ingrese observación" class="form-control my-3 observacion" required />
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary" id="actualizarBus">Actualizar</button>
                        </div>
                    </form>
                    <div class="mt-3" id="cargarViajeRespuesta">
    
                    </div>
                </div>
    
            </div>
        </div>
    </div>

     <!-- Modal Ver -->
     <div class="modal fade" id="verAgendaBusModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Agenda de bus</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <form id="verAgendaBusForm">

                  </form>
                  <div class="mt-3" id="editarViajeRespuesta">
  
                  </div>
              </div>
  
          </div>
      </div>
  </div>      

    <!-- Modal eliminar bus -->
    <div class="modal fade" id="eliminarBusModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Eliminar chofer</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">

                  <p>¿Desea eliminar bus?</p> 
                      <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                          <button type="button" class="btn btn-danger" id="eliminarBus">Eliminar</button>
                      </div>
                  <div class="mt-3" id="cargarViajeRespuesta">
  
                  </div>
              </div>
  
          </div>
      </div>
  </div>

    <div class="btn-group" role="group">
      <button id="btnGroupDrop1" type="button" class="btn btn-warning dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Datos
      </button>
      <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
        <li><a class="dropdown-item" href="#" onclick="pintarBus()">Bus</a></li>
        <li><a class="dropdown-item" href="#" onclick="pintarEmpresa()">Empresa</a></li>
        <li><a class="dropdown-item" href="#" onclick="pintarChofer()">Chofer</a></li>
      </ul>
    </div>
  
</div>

      <br>
      <form id="buscarByEmail">
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Busqueda</label>
          <input id="searchTerm" onkeyup="doSearch()" name="buscar" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Buscar...">
        </div>
      </form>


      <div id="contenido" class="container"> <!-- esto era container, no row-->

      </div>

      <div id="contenidoBus" class="container"> <!-- esto era container, no row-->
      
      </div>
    </div>
    </main>
